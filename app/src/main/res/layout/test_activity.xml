<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cream"
    tools:conte1xt=".ActivityMainCopy">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cream">

        <ImageView
            android:id="@+id/account"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="72dp"
            android:text="Welcome, Jisoo"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/missing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Missing your pet already?"
            android:textColor="#70000000"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome" />



        <Button
            android:id="@+id/buttonDensity"
            android:layout_width="27dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/baseline_density_medium_24"
            android:backgroundTint="@color/black"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.165">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/constrCarousel">

                <ImageView
                    android:id="@+id/box1"
                    android:layout_width="140dp"
                    android:layout_height="198dp"
                    android:layout_marginStart="36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/constrCarousel"
                    app:srcCompat="@drawable/rectangle"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/clock"
                    android:layout_width="58dp"
                    android:layout_height="61dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="@+id/box1"
                    app:layout_constraintTop_toTopOf="@+id/box1"
                    app:srcCompat="@drawable/clock" />

                <Button
                    android:id="@+id/buttonTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="145dp"
                    android:backgroundTint="#D9D9D9"
                    android:padding="2dp"
                    android:text="Set Timer"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/box1"
                    app:layout_constraintTop_toTopOf="@id/box1" />

                <TextView
                    android:id="@+id/mealSetTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="100dp"
                    android:text="The meal is all set!"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@id/box1"
                    app:layout_constraintTop_toTopOf="@id/box1" />

                <TextView
                    android:id="@+id/timeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="120dp"
                    android:text="8.00, 17.00"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/box1"
                    app:layout_constraintTop_toTopOf="@id/box1" />

                <ImageView
                    android:id="@+id/box2"
                    android:layout_width="140dp"
                    android:layout_height="198dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/box1"
                    app:layout_constraintTop_toTopOf="@id/constrCarousel"
                    app:srcCompat="@drawable/rectangle"
                    app:tint="@color/white" />

                <Button
                    android:id="@+id/buttonPortion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="145dp"
                    android:backgroundTint="#D9D9D9"
                    android:padding="2dp"
                    android:text="Set Portion"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/box2"
                    app:layout_constraintTop_toTopOf="@id/box2" />

                <ImageView
                    android:id="@+id/foodTray"
                    android:layout_width="58dp"
                    android:layout_height="61dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="@+id/box2"
                    app:layout_constraintTop_toTopOf="@+id/box2"
                    app:srcCompat="@drawable/foodtray" />

                <TextView
                    android:id="@+id/mealPortTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="100dp"
                    android:text="Meal portion is"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="@id/box2"
                    app:layout_constraintTop_toTopOf="@id/box2" />

                <TextView
                    android:id="@+id/mediumTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="120dp"
                    android:text="MEDIUM"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/box2"
                    app:layout_constraintTop_toTopOf="@id/box2" />

                <ImageView
                    android:id="@+id/box3"
                    android:layout_width="140dp"
                    android:layout_height="198dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/box2"
                    app:layout_constraintTop_toTopOf="@id/constrCarousel"
                    app:srcCompat="@drawable/rectangle"
                    app:tint="@color/white" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </HorizontalScrollView>

        <TextView
            android:id="@+id/containerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:text="Container Status"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/watertodayTxt" />

        <TextView
            android:id="@+id/perReportTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:text="Pet Report"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

        <TextView
            android:id="@+id/mochiEatenTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:text="Mochi has eaten at"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perReportTxt" />

        <TextView
            android:id="@+id/mochiDrunkTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="88dp"
            android:text="Mochi has consumed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perReportTxt" />

        <TextView
            android:id="@+id/todayTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="40dp"
            android:text="08.00 and 17.00 today"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perReportTxt" />

        <TextView
            android:id="@+id/watertodayTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="110dp"
            android:text="200 mL of water today"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perReportTxt" />

        <TextView
            android:id="@+id/hiTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="Hi!"
            android:textSize="55sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="364dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="156dp"
            android:layout_height="178dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:srcCompat="@drawable/corgi" />

        <ImageView
            android:id="@+id/contfood"
            android:layout_width="158dp"
            android:layout_height="127dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerTxt"
            app:srcCompat="@drawable/rectangle"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/contdrink"
            android:layout_width="158dp"
            android:layout_height="127dp"
            android:layout_marginStart="212dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerTxt"
            app:srcCompat="@drawable/rectangle"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/imagefood"
            android:layout_width="62dp"
            android:layout_height="61dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/contfood"
            app:layout_constraintTop_toTopOf="@+id/contfood"
            app:srcCompat="@drawable/foodcontainer" />

        <ImageView
            android:id="@+id/imagedrink"
            android:layout_width="62dp"
            android:layout_height="61dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/contdrink"
            app:layout_constraintTop_toTopOf="@+id/contdrink"
            app:srcCompat="@drawable/drinkcontainer" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="360dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contfood" />

        <TextView
            android:id="@+id/percentagefood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="78dp"
            android:text="LOW"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/contfood"
            app:layout_constraintTop_toTopOf="@+id/contfood" />

        <TextView
            android:id="@+id/percentagedrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="72dp"
            android:text="57%"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/contdrink"
            app:layout_constraintTop_toTopOf="@+id/contdrink" />

        <TextView
            android:id="@+id/articleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Articles"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contfood" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/articleLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/articleTitle"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="330dp"
                android:layout_height="200dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_marginTop="-2dp"
                android:padding="0dp"
                app:srcCompat="@drawable/articletn1"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView8" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="160dp"
                android:text="8 tips to keep your dog healthy"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView8" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
